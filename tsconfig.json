{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      // This needs to be mirrored in babel.config.js
      "@/app/*": [
        "app/*"
      ],
      "@/assets/*": [
        "app/assets/*"
      ],
      "@/components": [
        "app/components/index.ts"
      ],
      "@/components/*": [
        "app/components/*"
      ],
      "@/constants": [
        "app/constants/index.ts"
      ],
      "@/constants/*": [
        "app/constants/*"
      ],
      "@/contexts/*": [
        "app/contexts/*"
      ],
      "@/hooks/*": [
        "app/hooks/*"
      ],
      "@/routes": [
        "app/routes/index.tsx"
      ],
      "@/routes/*": [
        "app/routes/*"
      ],
      "@/screens": [
        "app/screens/index.tsx"
      ],
      "@/screens/*": [
        "app/screens/*"
      ],
      "@/services/*": [
        "app/services/*"
      ],
      "@/apis/*": [
        "app/services/apis/*"
      ],
      "@/stores": [
        "app/stores/index.tsx"
      ],
      "@/stores/*": [
        "app/stores/*"
      ],
      "@/styles/*": [
        "app/styles/*"
      ],
      "@/types/*": [
        "app/types/*"
      ],
      "@/utils": [
        "app/utils/index.ts"
      ],
      "@/utils/*": [
        "app/utils/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}